<p id="notice"><%= notice %></p>

<h1>Recruitments</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Discordid</th>
      <th>Status</th>
      <th>Ingreso</th>
      <th>Birthdate</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Country</th>
      <th>Alter1</th>
      <th>Alter2</th>
      <th>Alter3</th>
      <th>Alter4</th>
      <th>Alter5</th>
      <th>Image</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recruitments.each do |recruitment| %>
      <tr>
        <td><%= recruitment.first_name %></td>
        <td><%= recruitment.last_name %></td>
        <td><%= recruitment.discordID %></td>
        <td><%= recruitment.status %></td>
        <td><%= recruitment.ingreso %></td>
        <td><%= recruitment.birthdate %></td>
        <td><%= recruitment.email %></td>
        <td><%= recruitment.phone_number %></td>
        <td><%= recruitment.country %></td>
        <td><%= recruitment.alter1 %></td>
        <td><%= recruitment.alter2 %></td>
        <td><%= recruitment.alter3 %></td>
        <td><%= recruitment.alter4 %></td>
        <td><%= recruitment.alter5 %></td>
        <td><%= recruitment.image %></td>
        <td><%= recruitment.note %></td>
        <td><%= link_to 'Show', recruitment %></td>
        <td><%= link_to 'Edit', edit_recruitment_path(recruitment) %></td>
        <td><%= link_to 'Destroy', recruitment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

